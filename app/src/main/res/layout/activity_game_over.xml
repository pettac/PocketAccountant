<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_continue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cst4701.game.pocketaccountant.GameActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tombstone"
        android:layout_marginTop="29dp"
        android:id="@+id/tombstone"
        android:adjustViewBounds="false"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gameover" />

    <TextView
        android:text="GAME OVER"
        android:id="@+id/gameover"
        android:layout_width="300dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/mainMenu"
        android:background="@drawable/main_menu_button"
        android:onClick="openMainMenu"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/deathMessage"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        android:layout_above="@+id/mainMenu"
        android:layout_centerHorizontal="true"
        android:layout_width="375dp"
        android:layout_height="110dp" />
</RelativeLayout>
