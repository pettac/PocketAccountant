<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_continue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cst4701.game.pocketaccountant.Continue">

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happyTitle"
        android:layout_alignStart="@+id/happyTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/progressBar2"
        android:layout_alignEnd="@+id/happyValue"
        android:visibility="visible" />

    <TextView
        android:text="Countdown Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:id="@+id/countdownHeader"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/countdownTimer"
        android:textSize="24sp"
        android:layout_below="@+id/countdownHeader"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/happyTitle"
        android:textSize="24sp"
        android:text="Happiness:"
        android:layout_below="@+id/countdownTimer"
        android:layout_toStartOf="@+id/countdownTimer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/happyTitle"
        android:layout_toEndOf="@+id/countdownTimer"
        android:layout_marginStart="11dp"
        android:id="@+id/happyValue"
        android:textSize="24sp"
        android:text="100" />

    <TextView
        android:text="Hunger:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/hungerTitle"
        android:textSize="24sp"
        android:layout_below="@+id/happyTitle"
        android:layout_alignEnd="@+id/happyTitle" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hungerValue"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/hungerTitle"
        android:layout_alignBottom="@+id/hungerTitle"
        android:layout_alignStart="@+id/happyValue" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happyTitle"
        android:layout_alignStart="@+id/happyTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/happyBar"
        android:layout_alignEnd="@+id/happyValue"
        android:indeterminate="false" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hungerTitle"
        android:layout_alignStart="@+id/happyTitle"
        android:layout_marginTop="21dp"
        android:id="@+id/hungerBar"
        android:layout_alignEnd="@+id/hungerValue" />

</RelativeLayout>
