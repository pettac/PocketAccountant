<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_continue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="cst4701.game.pocketaccountant.Continue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdownTimer"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/accountantImage"
        android:layout_below="@+id/countdownTimer"
        android:layout_toEndOf="@+id/happyTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/energyIcon"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/countdownTimer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/funIcon"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/energyIcon"
        android:layout_toEndOf="@+id/countdownTimer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/happyIcon"
        android:layout_alignTop="@+id/funIcon"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happyBar"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/funIcon"
        android:layout_alignEnd="@+id/countdownTimer"
        android:layout_alignTop="@+id/funIcon"
        android:layout_toEndOf="@+id/happyIcon" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funBar"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/funIcon"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/funIcon"
        android:layout_toEndOf="@+id/funIcon" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energyBar"
        android:indeterminate="false"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/energyIcon"
        android:layout_below="@+id/funIcon"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/hungerIcon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:id="@+id/hungerBar"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/funIcon"
        android:layout_alignEnd="@+id/countdownTimer"
        android:layout_toEndOf="@+id/hungerIcon" />

</RelativeLayout>
